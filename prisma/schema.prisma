generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model new_tasks {
  id          String    @id(map: "newtable_pk") @db.Uuid
  name        String    @db.VarChar(100)
  description String?
  deadline    DateTime? @db.Timestamp(6)
  completed   Boolean   @default(false)
  user_id     String    @db.Uuid
  new_users   new_users @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "new_tasks_new_users_fk")
}

model new_users {
  id        String      @id(map: "new_users_pk") @db.Uuid
  username  String      @unique(map: "new_users_unique") @db.VarChar(100)
  email     String      @unique(map: "new_users_unique_1") @db.VarChar(254)
  password  String      @db.VarChar(64)
  new_tasks new_tasks[]
}
